      print("aliens distance:", aliens_distance, "kilometers")
      print("energy left:", energy)
      print("thirst:", thirst)
      print("turns survived:", turn)
      print("temperature:", temperature, "degrees fahrenheit")
      print("")
      print("")
      update_leaderboard(miles_traveled)
      display_leaderboard()
